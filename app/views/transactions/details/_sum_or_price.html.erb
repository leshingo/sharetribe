<% if quantity > 1 %>
  <p class="message-price-break-down">
    <%= t("transactions.unit_price", unit_price: humanized_money_with_symbol(unit_price)) %>
    <br />
    <%= t("transactions.quantity", quantity: quantity) %>
  </p>
<% end %>

<% if sum %>
  <p class="message-sum">
    <%= t("conversations.show.sum", sum: humanized_money_with_symbol(sum)) %>
  </p>
<% elsif price %>
  <p class="message-price">
    <%= t("conversations.show.price", price: humanized_money_with_symbol(price)) %>


    <% if excludes_vat %>
      <span class="message-price-vat">
        <%= t("conversations.show.price_excludes_vat") %>
      </span>
    <% end %>

  </p>
<% end %>
